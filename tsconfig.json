{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": [
            "es2018"
        ],
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types"
    },

    "include": [
        "src/**/*",
        "test/**/*"
    ],

    "exclude": [
        "node_modules"
    ]


}